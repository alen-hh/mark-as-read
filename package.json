{
  "name": "mark-as-read",
  "displayName": "Mark as Read",
  "version": "2.0.0",
  "description": "Track and mark pages as \"read\" in Chrome. Instantly see which URLs you've visited, and manage your reading history easily.",
  "author": "Alen Hu <huhaoyue0220@126.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.18",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "commands"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*.png"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ],
    "commands": {
      "toggle-mark-as-read": {
        "suggested_key": {
          "default": "Ctrl+Shift+M",
          "mac": "Command+Shift+M"
        },
        "description": "Toggle mark current page as read or unread"
      }
    }
  }
}
